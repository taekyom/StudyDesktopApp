<Window x:Class="BlinkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlinkerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450" Loaded="Window_Loaded">
    <Grid Height="219" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnStartBlink" Content="" Grid.Column="0" Grid.Row="0" Background="BlanchedAlmond" Click="BtnStartBlink_Click"/>
        <Button x:Name="BtnStopBlink" Content="" Grid.Column="1" Grid.Row="0" Background="Cyan" Click="BtnStopBlink_Click"/>
        <Label Content="Start Blinking" Grid.Row="1"/>
        <Label Content="Stop Blinking" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
