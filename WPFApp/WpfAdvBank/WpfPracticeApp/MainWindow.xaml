<mah:MetroWindow 
    x:Class="WpfPracticeApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfPracticeApp"
    mc:Ignorable="d"
    Title="MainWindow" 
    Height="450" 
    Width="800"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResizeWithGrip"
    GlowBrush="{DynamicResource MahApps.Brushes.Accent}">
    <Grid>
        <Ellipse Width="100" Height="100" Fill="CadetBlue" Stroke="Black" StrokeThickness="5"/>
        <Rectangle Width="100" Height="100" Fill="IndianRed" Stroke="Black" StrokeThickness="5" Margin="500,160,160,160"/>
        <Button Content="Click"/>
    </Grid>
</mah:MetroWindow>
